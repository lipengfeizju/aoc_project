<?xml version="1.0" encoding="ISO-8859-15"?>
<launch>
  <arg name="ns" default="scarab40"/>
  <arg name="world" default="empty"/>
  
  <node name="transformer" pkg="tf" type="static_transform_publisher"
    args="0 0 0 0 0 0 1 map $(arg ns)/odom 100" />
 <!--  <node name="transformer2" pkg="tf" type="static_transform_publisher"
      args="0 0 0 0 0 0 1 base_footprint map 100" />  -->

  <node name="map_server" pkg="map_server" type="map_server" output="screen"
        args="$(find nx_models)/worlds/$(arg world).yaml">
    <param name="frame_id" value="map" />
  </node>        
</launch>

